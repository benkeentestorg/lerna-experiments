{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "es6"
    ],
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*.tsx",
    "src/**/*.scss"
  ]
}

